{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist/",
    "strict": true,
    "composite": true,
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"]
}
