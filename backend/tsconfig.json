{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "lib": ["ES2022", "dom"], // @NOTE - dom fixes engineio build problem
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "skipLibCheck": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@jobs/*": ["jobs/*"],
      "@mappers/*": ["mappers/*"],
      "@enums/*": ["types/enums/*"],
      "@config": ["config/"],
      "@routes": ["routes/"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@helpers/*": ["helpers/*"],
      "@schemas/*": ["schemas/*"],
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@factories/*": ["factories/*"],
      "@middleware/*": ["middleware/*"],
      "@migrations/*": ["migrations/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@consumer-handlers/*": ["consumer-handlers/*"],
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared/tsconfig.json"
    }
  ]
}
