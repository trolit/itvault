{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true, // @INFO to get rid of "tpyeorm-extension" TS2344 error
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "miscellaneous-types": ["types/miscellaneous"],
      "@jobs/*": ["jobs/*"],
      "@mappers/*": ["mappers/*"],
      "@enums/*": ["types/enums/*"],
      "@config": ["config/"],
      "@routes": ["routes/"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@helpers/*": ["helpers/*"],
      "@schemas/*": ["schemas/*"],
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@factories/*": ["factories/*"],
      "@middleware/*": ["middleware/*"],
      "@migrations/*": ["migrations/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@consumer-handlers/*": ["consumer-handlers/*"],
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared/tsconfig.json"
    }
  ]
}
